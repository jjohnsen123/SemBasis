<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Editor x:Name="Id"></Editor>
            <Button Text="Hent fra ID" Clicked="Button_Clicked"></Button>
            <HorizontalStackLayout>
                <Editor x:Name="Name" />
                <Editor x:Name="YearsEmployed" />
                <Label x:Name="IdToEdit" />
            </HorizontalStackLayout>
            <Button x:Name="Gem" Text="Gem" Clicked="Gem_Clicked"></Button>
            <CollectionView x:Name="Companies" SelectionChanged="Companies_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                        <Label Text="{Binding CompanyName}"/>
                            
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>
            <Button Text="Vis company nummer -1" Clicked="Button_Clicked_1"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
