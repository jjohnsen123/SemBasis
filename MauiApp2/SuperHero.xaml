<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.SuperHero"
             xmlns:local="clr-namespace:MauiApp2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Text="Batman"/>
        <Label Grid.Column="0" Grid.Row="1" Text="Hulk"/>

        <Button Grid.Column="1" Grid.Row="0" Text="Does Nothing Yet 1" />
        <Button Grid.Column="1" Grid.Row="1" Text="Does Nothing Yet 2" />

        <Label Grid.Column="2" Grid.Row="0" Text="Robin"/>
        <Label Grid.Column="2" Grid.Row="1" Text="Spiderman"/>


    </Grid>
    
    
</ContentView>
