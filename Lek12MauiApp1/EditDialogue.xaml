<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Lek12MauiApp1.EditDialogue">

    <VerticalStackLayout>
        <Entry x:Name="ModelEntry" Text="{Binding Model}"/>
        <Entry x:Name="HorsePowerEntry" Text="{Binding HorsePower}"/>
        <HorizontalStackLayout>
            <Label Text="Is Electric:"/>
            <CheckBox x:Name="IsElectricChkBox" IsChecked="{Binding IsElectric}"/>
        </HorizontalStackLayout>
        <Button Text="OK" Clicked="Button_Clicked"/>
    </VerticalStackLayout>

</toolkit:Popup>