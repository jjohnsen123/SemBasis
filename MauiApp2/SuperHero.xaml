<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.SuperHero"
             Title="SuperHero">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="lbl1" Grid.Column="0" Grid.Row="0" Text="Batman" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Label x:Name="lbl2" Grid.Column="0" Grid.Row="1" Text="Hulk" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <Button x:Name="btn1" Grid.Column="1" Grid.Row="0" Text="Switch" Clicked="Btn1_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button x:Name="btn2" Grid.Column="1" Grid.Row="1" Text="Switch" Clicked="Btn2_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>

        <Label x:Name="lbl3" Grid.Column="2" Grid.Row="0" Text="Robin" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Label x:Name="lbl4" Grid.Column="2" Grid.Row="1" Text="Spiderman" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>


    </Grid>
</ContentPage>